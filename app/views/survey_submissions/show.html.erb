<div class="page-header">
  <h1><%= @survey.title %></h1>
</div>

<% if @survey_submission.user_course != curr_user_course %>
    <table width="100%">
      <col width="10%" />
      <tr><td><strong>Student:</strong> </td><td><%= render partial: "layouts/user_name_link", locals: {user_course: @survey_submission.user_course} %></td></tr>
      <tr><td><strong>Submitted at:</strong> </td><td><%= @survey_submission.submitted_at ? time_ago_in_words(@survey_submission.submitted_at) : ""%> ago</td></tr>
    </table>
<% end %>


<p><%= @survey.description.html_safe %></p>

<% if @survey.has_section? %>
    <%= render partial: "with_section_template", locals: {mode: "Review"} %>
<% else %>
    <%= render partial: "no_section_template" %>
<% end %>
