<%- model_class = Course -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
                                   :default => "Edit #{model_class.model_name.human}") %></h1>
</div>
<%= render :partial => 'course_preference_form' %>

<% if can? :destroy, @course %>
<hr>
<h1>Delete Course</h1>
<div class="alert">
  <strong>Careful!</strong> Once you have deleted a course, you will not be able to recover its data!
</div>

    <div class="center">

      <%= link_to "Actual Delete Link", course_path(@course),
                  id: "delete-course-link", class: "hidden", method:"DELETE" %>

      <%= link_to "Delete Course", '#',
                  id: "delete-course-btn",
                  class: "btn btn-large btn-danger center" %>
    </div>
<% end %>