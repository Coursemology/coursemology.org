<%= simple_form_for [@course, @tag],
                    :html => { :class => 'form-horizontal' },
                    defaults: { input_html: { class: 'span7' } } do |f| %>
    <%= f.input :name %>
    <%= f.input :description, as: :text, input_html:{class: "span7 text-area", rows:10}  %>
    <%= f.association :tag_group, collection: @course.tag_groups, input_html: {class: "input-medium"}, include_blank: false%>

    <%= f.button :form_submit, cancel: course_tags_path(@course) %>
<% end %>
