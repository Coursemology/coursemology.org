<p>
  Events, Missions, or Trainings that fall between a milestone's start and end dates will appear as part of that milestone.
</p>
    
<%= form_for [@course, @lesson_plan_milestone], :html => { :class => 'form-horizontal lesson-plan-milestone-form' } do |f| %>
    <div class="control-group">
      <%= f.label :title, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => 'text_field span7', :placeholder => "e.g. Week 1", :required => 'required' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => 'text_field span7 html-editor',
                        :placeholder => "What will happen by this milestone? What should students learn or achieve?" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "Start Date", :class => 'control-label' %>
      <div class="controls">
        <div id="lesson_plan_milestone_start_at_picker" class="datepicker input-append date">
          <% if @lesson_plan_milestone.start_at %>
          <%= f.text_field :start_at, :class => 'text_field', :value => date_mdY(@lesson_plan_milestone.start_at), :required => 'required' %>
          <% else %>
          <%= f.text_field :start_at, :class=> 'text_field', :required => 'required' %>
          <% end %>
          <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
          </span>
        </div>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "End Date (Optional)", :class => 'control-label' %>
      <div class="controls">
        <div id="lesson_plan_milestone_end_at_picker" class="datepicker input-append date">
          <% if @lesson_plan_milestone.end_at %>
          <%= f.text_field :end_at, :class => 'text_field', :value => date_mdY(@lesson_plan_milestone.end_at) %>
          <% else %>
          <%= f.text_field :end_at, :class=> 'text_field' %>
          <% end %>
          <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
          </span>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Submit", :class => 'btn btn-primary', data: {disable_with: "Submitting..."} %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  course_lesson_plan_path(@course), :class => 'btn' %>
    </div>
<% end %>
