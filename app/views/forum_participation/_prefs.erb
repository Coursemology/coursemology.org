<%= form_tag course_forum_participation_path, class: 'form-horizontal', method: 'get' do  %>
  <div class="control-group">
    <%= label_tag :from, 'From (inclusive)', class: 'control-label' %>
    <div class="controls">
      <div class="datepicker-past-only input-append">
        <%= text_field_tag :from, '' ,
                           value: @from_date,
                           class: 'input-medium',
                           id: "from_date"
        %>
        <span class="add-on">
          <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
        </span>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :to, 'To (inclusive)', class: 'control-label' %>
    <div class="controls">
      <div class="datepicker-past-only input-append">
        <%= text_field_tag :to, '' ,
                           value: @to_date,
                           class: 'input-medium',
                           id: "to-date"
        %>
        <span class="add-on">
          <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
        </span>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :weekly, 'Weekly Max EXP', class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :weekly, '' ,
                         value: @weekly,
                         class: 'input-medium',
                         id: "weekly-cap"
      %>
      <div class="help-block">
        <p>Actual EXP cap will be calculated based on date range specified.</p>
        <p>If date range is incomplete, this value becomes the default EXP cap.</p>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag 'Search', :class => 'btn btn-primary', id: 'submit_date_range' %>
  </div>
<% end %>
