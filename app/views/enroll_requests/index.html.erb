<div class="page-header">
  <h1>Enroll Requests</h1>
</div>

<ul class="nav nav-tabs">
  <li class="active">
    <a href='<%= course_enroll_requests_path(@course) %>'>Enroll Requests</a>
  </li>
  <li>
    <a href='<%= course_mass_enrollment_emails_path(@course) %>'>Mass Enrolments</a>
  </li>
</ul>

<% if @staff_requests.size > 0 %>
  <h3>Staff Requests:</h3>
  <%= render partial: "enroll_requests/list", locals: { requests: @staff_requests, type: "staff" } %>
<% end %>

<br/>

<% if @student_requests.size > 0 %>
  <h3>Student Requests:</h3>
  <%= render partial: "enroll_requests/list", locals: { requests: @student_requests, type: "student" } %>
<% end %>

<% if @staff_requests.size + @student_requests.size == 0 %>
  <span>There is no outstanding request</span>
<% end %>