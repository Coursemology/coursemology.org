<div class="page-header">
  <h1>Pending Grading</h1>
</div>
<table class="table">
  <thead>
  <tr>
    <th width="15%">Student</th>
    <th>Mission</th>
    <th width="15%">Submitted at </th>
    <th>Tutor</th>
    <th width="10%">Action</th>
  </tr>
  </thead>
  <tbody>
  <% @pending_gradings.each do |sub| %>
      <tr>
        <td>
          <%= sub.std_course.name %>
        </td>
        <td><%= link_to sub.assessment.get_title, sub.assessment.get_path %></td>
        <td><%= datetime_format sub.submitted_at %> </td>
        <td>
          <%= sub.std_course.get_my_tutor_name %>
        </td>
        <% if can? :manage, Assessment::Submission %>

            <td>
              <%= link_to "Evaluate",
                          sub.get_new_grading_path,
                          class: "btn btn-primary" %>
            </td>
        <% end %>

      </tr>
  <% end %>
  </tbody>
</table>

<script>
    count = <%= @pending_gradings.size %>;
    $("#badge_PendingGrading")[0].innerHTML = count || ""
</script>