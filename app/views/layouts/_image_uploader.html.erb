<div id="image-uploader-modal" class="modal hide fade <%= container_class %>">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>Insert image</h3>
    <h5>(Recommended size: 190px × 190px)</h5>
  </div>
  <div class="modal-body">
    <div id="image-upload-form"
      data-url="<%= upload_to %>">
      <input type="hidden" class="image-uploader-input-url <%= image_url_class %>"/>
      <h3 id="image-dropzone" class="drag-drop-area">DROP FILE HERE</h3>
      <span class="fileinput-button">
        <i class="icon-plus"></i>
        <span>Upload from Computer</span>
        <input type="file"/>
      </span>
      <div class="progress progress-striped active clearfix">
        <div class="bar" style="width: 0%"></div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Cancel</a>
    <a href="#" class="btn btn-primary image-uploader-insert-btn" data-dismiss="modal">Done</a>
  </div>
</div>

<script id="template-upload" type="text/x-tmpl">
</script>
<script id="template-download" type="text/x-tmpl">
</script>
