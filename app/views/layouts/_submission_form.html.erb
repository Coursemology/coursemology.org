<% @submission.answers.each_with_index do |a, i| %>
  <%- q = a.question %>
  <%- question = q.specific %>
  <%- answer = a.specific %>
  <hr />
  <% unless @mission.single_question? %>
    <h3>Question <%= i + 1 %>:</h3>
    <div class="row-fluid">
      <div class="submission-question-block span10"><%= style_format(q.description) %></div>
    </div>
  <% end %>

  <h3>Answer:</h3>
  <% if answer %>
    <% if question.class == Assessment::CodingQuestion %>
      <%= render partial: 'mission_submissions/do_coding',
                 locals: { answer:   answer,
                           question: question,
                           mode:     'view' } %>
    <% else %>
      <div class="row-fluid">
        <div class="submission-question-block span10">
          <%= answer.text.html_safe %>
        </div>
      </div>
    <% end %>

    <div class="row-fluid">
      <div class="span10">
        <%- require 'digest/md5' %>
        <%- ecid = Digest::MD5.hexdigest(a.class.to_s << a.id.to_s) %>
        <input type="hidden" id="submission_url_<%= ecid %>" value="<%= course_assessment_mission_assessment_submission_url(@course, @mission, @submission) %>" />
        <%= render partial: 'comments/list',
                   locals: { comments:  CommentTopic.comments_to_json(a.comment_topic, curr_user_course),
                             target:    a,
                             header:    'Comments',
                             ecid:      ecid } %>
      </div>
    </div>

    <!--show condition: new grading, review grading, update grading -->
    <% unless @mission.single_question? %>
      <div class="row-fluid">
        <div class="span10">
          <div class="grading-block">
            <%- exp = (@mission.exp * (q.max_grade.to_f / @mission.max_grade.to_f)).to_i %>
            <%- grade = a.grading %>
            <h4>Grade awarded</h4>
            <% if mode == 'view' %>
              <strong><%= grade.grade %></strong>
            <% else %>
              <input type="number"
                     name="grades[<%= grade.id %>][grade]"
                     value="<%= grade.grade %>"
                     class="input-small grade-input"
                     max="<%= q.max_grade %>"
                     id="grade-awarded-<%= grade.id %>"
                     onchange="suggestEXP(<%= @mission.max_grade %>, <%= @mission.exp %>)"
                     required
              />
            <% end %>
            / <strong><%= q.max_grade %></strong>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
      <h4>No answer</h4>
  <% end %>
<% end %>

<hr />
<div class="row-fluid">
  <div class="span10">
    <div class="grade-summary">
      <h4>Total Grade:</h4>
      <% if mode == 'view' %>
          <strong><%= @grading.total_grade %></strong>
      <% else %>
          <input type="number"
                 value="<%= @submission_grading.total_grade if @submission_grading %>"
                 max="<%= @mission.max_grade %>"
                 class="input-small"
                 name="grade_sum"
                 id="grade-sum"
                 onchange="suggestEXP(<%= @mission.max_grade %>, <%= @mission.exp %>, true )"
                 <%= 'disabled' unless @mission.single_question? %>>
      <% end %>
      <strong> / <%= @mission.max_grade %></strong>
      <br><br>
      <h4>EXP awarded</h4>
      <% if mode == 'view' %>
          <strong><%= @grading.total_exp %></strong>
      <% else %>
          <input type="number"
                 name="exp_sum"
                 value="<%= @submission_grading.total_exp if @submission_grading %>"
                 max="<%= @mission.exp %>"
                 class="input-small exp-input"
                 id="exp-sum"
                 required/>
      <% end %>
      <strong> / <%= @mission.exp %></strong>
      <% if mode != 'view' %>
          <span>&nbsp;&nbsp;&nbsp;&nbsp;Multiplier:</span>
          <input type="number"
                 max="1"
                 id="exp-multiplier"
                 class="input-mini"
                 value="1"
                 step="0.1"
                 onchange="suggestEXP( <%= @mission.max_grade %>, <%= @mission.exp %> )"
          >
      <% end %>
    </div>
  </div>
</div>

<script>


    function suggestEXP(max, exp, sum) {

        var sum_grade = 0;
        if (typeof(sum) == 'undefined') {
            grade_input = $(".grade-input");

            grade_input.each(function(){
                sum_grade += $(this).val() - 0;
            });

        } else {
            sum_grade = $('#grade-sum').val() - 0;
        }

        multiplier = $("#exp-multiplier").val() - 0;
        multiplier = multiplier > 1 ? 1 : multiplier;

        total_grade = $("#grade-sum");


        var result = Math.round(Math.round(multiplier * (exp * sum_grade / max) / 5) * 5);
        $("#exp-sum").val(result);
        total_grade.val(sum_grade);
    }

    $(document).ready(function() {
        suggestEXP( <%= @mission.max_grade %>, <%= @mission.exp %> );
    });

</script>