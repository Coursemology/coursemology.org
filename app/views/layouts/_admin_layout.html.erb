<div class="row-fluid">
  <div class="span2 sidebar">
    <%= render "layouts/admin_side_bar" %>
  </div>
  <div class="span8 content">
    <div style="clearfix"></div>
    <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice].html_safe %>
        </div>
    <% end %>
    <% if flash[:error] %>
        <div class="alert alert-error">
          <%= flash[:error].html_safe %>
        </div>
    <% end %>
    <%= yield %>
  </div>
</div>

