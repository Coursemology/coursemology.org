<div class="page-header">
  <h1>Edit Guild</h1>
</div>

<%= render partial: 'manage_guild_tab', locals: { tab: '' } %>

<div class="row-fluid">
  <%= form_for [@course,@guild], :url => { :action => 'edit' }, :html => { :class => 'form-horizontal' } do |f| %>
      <div class="control-group">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, :class => 'text_field span10' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :description, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :description, :class => 'text_area span10 html-editor', :rows => 10 %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.submit 'Update Guild', :class => 'btn btn-primary' %>
        <%= link_to t('.cancel',
                      :default => t("helpers.links.cancel")),
                    course_guild_path,
                    :class => 'btn'%>
      </div>
  <% end %>

  <%= render partial: 'layouts/html_editor' %>
</div>