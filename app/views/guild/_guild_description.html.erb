<div class="row-fluid">
    <div class="span8">
        <div class="row-fluid">
            <h3>
              Guild Name: <%= guild.name %>
            </h3>
        </div>
        <div class="row-fluid">
            <p>
              Guild Description: <%= guild.description %>
            </p>
        </div>
    </div>
    <div class="span2">
      <%= link_to course_edit_guild_path(@course, guild), class: 'btn' do %>
          <i class="icon-edit"></i>
      <% end %>
      <%= link_to course_delete_guild_path(@course, guild),
                  method: :delete,
                  data: { confirm: t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  class: 'btn btn-danger' do %>
          <i class="icon-trash"></i>
      <% end %>
    </div>
</div>