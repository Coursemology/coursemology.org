<div class="page-header">
  <h3>Masquerades</h3>
</div>
<%= form_tag admin_masquerades_path, :method => 'get' do %>
    <%= render :partial => 'search_form'%>
<% end %>

<% if @users %>
    <table class="table table-hover assignments">
      <thead>
      <tr>
        <th>Name</th>
        <th>System Role</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= user.system_role.title %>
            </td>
            <td>
              <%=user.email  %>
            </td>
            <td>
              <%= link_to 'Masquerade', new_user_masquerade_path(user), class: "btn" %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
<% end %>
