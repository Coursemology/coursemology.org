<%= form_for [@course, @survey, @survey_section], :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :title, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => 'text_field', :rows => 10 %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => 'text_area span7 html-editor', :rows => 10 %>
      </div>
    </div>
    <div class="form-actions" >
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
    <%= render :partial => "layouts/html_editor" %>
<% end %>
