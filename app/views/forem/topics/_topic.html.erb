<tr class="topic <%= cycle('odd', 'even') %> <%= topic.locked? ? 'locked' : 'unlocked' %>">
  <td class='icon'>
    <span class='post-status-icons'>
      <% if topic.locked? %>
        <i class='icon-lock' title='Locked Post'></i>
      <% end %>
        <% if topic.pinned? %>
        <i class='icon-chevron-up' title='Pinned Post'></i>
      <% end %>
        <% if topic.hidden? %>
        <span class='label label-info'>Hidden</span>
      <% end %>
      <% if forem_user && view = topic.view_for(forem_user) %>
        <% if topic.posts.exists?(["created_at > ?", view.updated_at]) %>
          <i class='icon-envelope' title='Update!'></i>
        <% end %>
      <% end %>
    </span>
  </td>
  <td class='byline'>
    <div class='subject'><%= new_since_last_view_text(topic) %> <%= link_to forem_emojify(topic.subject), main_app.course_forum_topic_path(@course, @forum, topic) %></div>
    <div class='started-by'><%= t "started_by" %><%= relevant_posts(topic).first.user %></div>
  </td>
  <td class='latest-post text-center'>
    <%= link_to_latest_post(topic) -%>
  </td>
  <td class='posts-count text-center'><%= relevant_posts(topic).count %></td>
  <td class='views-count text-center'><%= topic.views_count %></td>
</tr>
