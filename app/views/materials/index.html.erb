<%- model_class = MaterialFolder -%>
<div class="page-header">
  <h1>
    <%= get_materials_display_name %>: <%= @folder.name %>
    <% if not @folder.is_open? %>
    <span class="label label-important large-label">Closed</span>
    <% end %>
  </h1>
  <% if @folder.description %>
  <div>
    <p><%= @folder.description.html_safe %></p>
  </div>
  <% end %>
</div>

<%= render :partial => 'folder_controls' %>

<div class="row-fluid">
  <div class="span3">
    <%= render :partial => 'folder_tree' %>
  </div>
  <div class="span9">
    <%= render :partial => 'folder_listing' %>
  </div>
</div>
