
<div class="btn-group">
	<a class="btn" title="Enter Scribing Mode" id="scribing-mode-<%= qid %>">
		<i class="icon-pencil"></i>
	</a>
	<a class="btn" title="Reload" id="scribing-reload-<%= qid %>">
		<i class="icon-download"></i>
	</a>
	<a class="btn btn-danger" title="Delete Selection" id="scribing-delete-<%= qid %>">
		<i class="icon-trash"></i>
	</a>
</div>
<canvas class="scribing-canvas"
        id="scribing-canvas-<%= qid %>" 
				style="border:1px solid black;"
				width=700
				height=500
				data-qid="<%= qid %>"
				<% if question.document  %>
					data-url="<%= question.document.file.to_s %>"
				<% else %>
					data-url=""
				<% end %>
				></canvas>

<%= hidden_field('answers', qid, value: answer.content) %>