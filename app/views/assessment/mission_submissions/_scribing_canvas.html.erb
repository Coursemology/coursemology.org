<div class="btn-toolbar">
	<div class="btn-group" id="scribing-buttons-<%= qid %>">
		<a class="btn" title="Enter Edit Mode" id="edit-mode-<%= qid %>">
			<i class="icon-magnet"></i>
		</a>
		<a class="btn" title="Enter Scribing Mode" id="scribing-mode-<%= qid %>">
			<i class="icon-pencil"></i>
		</a>
		<a class="btn" title="Enter Grab Mode" id="grab-mode-<%= qid %>">
			<i class="icon-search"></i>
		</a>
	</div>
	<div class="btn-group">
		<a class="btn" title="Zoom in" id="scribing-zoom-in-<%= qid %>">
			<i class="icon-zoom-in"></i>
		</a>
		<a class="btn" title="Zoom out" id="scribing-zoom-out-<%= qid %>">
			<i class="icon-zoom-out"></i>
		</a>
	</div>
	<div class="btn-group">
		<a class="btn btn-danger" title="Delete Selection" id="scribing-delete-<%= qid %>">
			<i class="icon-trash"></i>
		</a>
	</div>
	<div class="btn-group">
		<a class="btn" title="Save Canvas" id="scribing-save-<%= qid %>">
			<i class="icon-save"></i>
		</a>
	</div>
</div>
<canvas class="scribing-canvas"
        id="scribing-canvas-<%= qid %>" 
				style="border:1px solid black;"
				width=900
				height=1272
				data-qid="<%= qid %>"
				<% if question.document  %>
					data-url="<%= question.document.file.to_s %>"
				<% else %>
					data-url=""
				<% end %>
				></canvas>
<% if question.document %>
  <img style="display: none;" class="scribing-images"
        src="<%= question.document.file.to_s %>"
        data-qid="<%= qid %>"
        ></img>

<% end %>

<% answer.scribbles.each do |scribble| %>
	<%= scribble.std_course.id %> <br>
	<%= curr_user_course.id %>
	<%= scribble.std_course == curr_user_course %>
	<% is_scribble_locked = (scribble.std_course == curr_user_course) ? "false" : "true"  %>
	<%= hidden_field('scribbles', scribble.id, class: 'scribble-' + qid.to_s, value: scribble.content, "data-locked" => is_scribble_locked) %>
<% end %>

<% is_ans_locked = (answer.std_course == curr_user_course) ? "false" : "true"  %>
<%= hidden_field('answers', qid, value: answer.content, "data-locked" => is_ans_locked) %>



