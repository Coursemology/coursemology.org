<div class="page-header">
  <h1><%= @assessment.title %></h1>
</div>


<p class="mission-not-opened"> You have no access to this assessment :|</p>

<% if @assessment.have_dependent_assessment?(curr_user_course) %>
  <% dep_asm = @assessment.get_dependent_assessment(curr_user_course) %>
  <p>
    Please complete
    <% if dep_asm.is_mission? %>
      <%= link_to dep_asm.full_title, course_assessment_missions_path %>
    <% else %>
      <%= link_to dep_asm.full_title, course_assessment_trainings_path %>
    <% end %>
    before starting this!
  </p>
<% end %>